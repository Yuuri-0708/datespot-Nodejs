<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <div class="navbar navbar-expand-lg navbar-dark bg-primary">
      <div class="container-fluid">
        <div class="navbar-nav">
          <a class="nav-link" aria-current="page" href="/">ホーム画面</a>
          <a class="nav-link" href="/friends">みんなのデートスポット</a>
          <a class="nav-link" href="/mypage">マイページ</a>
        </div>
      </div>
    </div>

    <div class="bg-light p-4 p-lg-4 my-4 rounded">
      <h1 class="display-4 text-center"><%= title %></h1>
    </div>

    <div class="row">
        <div class="col-6 offset-3">
            <form action="/register" method="POST">
                <div class="mb-3 form-group">
                    <label for="name" class="form-label">ユーザネーム : </label>
                    <input type="text" class="form-control" name="name" value="<%= form.name %>">
                    <ul class="text-danger">
                        <% if(err != null) { for(let i in err.get('name')) { %>
                            <li><%= err.get('name')[i].message %></li>
                        <% }} %>
                    </ul>
                </div>
                <div class="mb-3 form-group">
                    <label for="email" class="form-label">メールアドレス : </label>
                    <input type="text" class="form-control" name="email" value="<%= form.email %>">
                    <ul class="text-danger">
                        <% if(err != null) { for(let i in err.get("email")) { %>
                            <li><%= err.get("email")[i].message %></li>
                        <% }} %>
                    </ul>
                </div>
                <div class="mb-3 form-group">
                    <label for="password" class="form-label">パスワード : </label>
                    <input type="password" class="form-control" name="password">
                    <ul class="text-danger">
                        <% if(err != null) { for(let i in err.get("password")) { %>
                            <li><%= err.get("password")[i].message %></li>
                        <% }} %>
                    </ul>
                </div>
                <div class="text-center">
                    <button class="btn btn-primary">登録する</button>
                </div>
            </form>
        </div>
        <div class="col-3"></div>
    </div>

  </body>
</html>
